<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	
	<servlet>
		<servlet-name>serverSideService</servlet-name>
		<servlet-class>com.dynamic_confusion.mygig_planner.server.ss_service.ServerSideServiceImpl</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>serverSideService</servlet-name>
		<url-pattern>server-side/*</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>RegistrationServlet</servlet-name>
		<servlet-class>com.dynamic_confusion.mygig_planner.server.users.RegistrationServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>RegistrationServlet</servlet-name>
		<url-pattern>/registration</url-pattern>
	</servlet-mapping>
	
	<!--  Servlet for logging in. -->
	
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.dynamic_confusion.mygig_planner.server.users.LoginServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<!--  Http Servlet for accepting or declining gigs -->
	
	<servlet>
		<servlet-name>availabilityServlet</servlet-name>
		<servlet-class>com.dynamic_confusion.mygig_planner.server.availability.AvailabilityServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>availabilityServlet</servlet-name>
		<url-pattern>/changeAvailability</url-pattern>
	</servlet-mapping>
	
	<!--  A http servlet for admin actions. -->
	
	<servlet>
		<servlet-name>adminServlet</servlet-name>
		<servlet-class>com.dynamic_confusion.mygig_planner.server.users.AdminServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>adminServlet</servlet-name>
		<url-pattern>admin/*</url-pattern>
	</servlet-mapping>	
	
	<!--  Http Servlet for accepting or declining gigs -->
	
	
	<servlet>
		<servlet-name>gigServlet</servlet-name>
		<servlet-class>com.dynamic_confusion.mygig_planner.server.gigs.GigTransactionServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>gigServlet</servlet-name>
		<url-pattern>gig/*</url-pattern>
	</servlet-mapping>	
	
	<servlet-mapping>
		<servlet-name>gigServlet</servlet-name>
		<url-pattern>gig/*</url-pattern>
	</servlet-mapping>
	
	
	<welcome-file-list>
		<welcome-file>MyGig_Planner.html</welcome-file>
	</welcome-file-list>
  
</web-app>